#: import ak asynckivy

<ConnectionScreenView>:
    host: host
    port: port
    connect_btn: connect_btn

    MDBoxLayout:
        orientation: 'vertical'
        padding: 15, 15, 15, 100

        MDCard:
            orientation: 'vertical'
            md_bg_color: app.theme_cls.primary_light
            padding: 15, 15, 15, 15

            AnchorLayout:
                size_hint_x: .5
                size_hint_y: 1
                pos_hint: {'center_x': .5, 'center_y': .5}

                MDTextField:
                    id: host
                    hint_text: 'Enter host...'
                    halign: 'center'
                    font_size: 30

            AnchorLayout:
                size_hint_x: .5
                size_hint_y: 1
                pos_hint: {'center_x': .5, 'center_y': .5}

                MDTextField:
                    id: port
                    hint_text: 'Enter port...'
                    halign: 'center'
                    input_filter: 'int'
                    font_size: 30

            AnchorLayout:

                MDRaisedButton:
                    id: connect_btn
                    text: 'Connect'
                    font_size: 36
                    on_release: root.controller.connect(host.text, int(port.text))
