<DataScreenView>:
    data_table_cont: data_table_cont

    MDBoxLayout:
        orientation: 'vertical'
        padding: 15, 15, 15, 100

        MDBoxLayout:
            orientation: 'vertical'
            padding: 25, 25, 25, 25
            spacing: 10

            AnchorLayout:
                size_hint_y: .15

                MDIconButton:
                    icon: 'plus-circle-outline'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_icon_color: "Custom"
                    icon_color: 0, 141/255, 142/255, 1
                    on_release: root.open_add_music_favor_popup()

            MDBoxLayout:
                id: data_table_cont