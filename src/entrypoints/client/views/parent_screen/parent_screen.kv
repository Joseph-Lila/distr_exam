<ParentScreenView>:
    app_bar: app_bar
    screen_manager: screen_manager

    ScreenManager:
        id: screen_manager

    MDBottomAppBar:

        MDTopAppBar:
            id: app_bar
            use_overflow: True
            icon: 'connection'
            icon_color: 1, 0, 0, 1
            type: 'bottom'
            left_action_items: [["home", lambda x: root.controller.go_to_connection_screen()], ["table-account", lambda x: root.controller.go_to_data_screen()], ["poll", lambda x: root.controller.go_to_pandas_screen()]]
